package display {	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.filters.DropShadowFilter;	public class LibraryButton extends Sprite {		public var mcAsset:MovieClip;		public var oData:*;		protected var bSelected:Boolean = true;		protected var bAutoSelect:Boolean;				public function LibraryButton(mcAsset:MovieClip, bAutoSelect:Boolean = false) {			this.mcAsset = mcAsset;			this.bAutoSelect = bAutoSelect;			mcAsset.filters = [new DropShadowFilter(2, 45, 0x000000, 1, 2, 2, 0.5, 1)];			addChild(mcAsset);						mouseChildren = false;			addEventListener(MouseEvent.ROLL_OVER, onRollOver);			addEventListener(MouseEvent.ROLL_OUT, onRollOut);			addEventListener(MouseEvent.MOUSE_DOWN, onDown);			addEventListener(MouseEvent.CLICK, onClick);						selected = false;			buttonMode = true;		}				public function set selected(bSelected:Boolean):void {			if (this.bSelected == bSelected) {				return;			}						this.bSelected = bSelected;			if(bSelected){				mcAsset.gotoAndStop(3);			}else {				mcAsset.gotoAndStop(1);			}		}				public function get selected():Boolean {			return bSelected;		}				private function onClick(evt:MouseEvent = null):void {			if (bSelected) {				return;			}			if(bAutoSelect){				selected = true;			}		}						private function onRollOver(evt:MouseEvent = null):void {			if (bSelected) {				return;			}						mcAsset.gotoAndStop(2);		}				private function onRollOut(evt:MouseEvent = null):void {			if (bSelected) {				return;			}						mcAsset.gotoAndStop(1);		}				private function onDown(evt:MouseEvent = null):void {			if (bSelected) {				return;			}						stage.addEventListener(MouseEvent.MOUSE_UP, onUp);			mcAsset.gotoAndStop(3);		}				private function onUp(evt:MouseEvent = null):void {			if (bSelected) {				return;			}						stage.removeEventListener(MouseEvent.MOUSE_UP, onUp);			mcAsset.gotoAndStop(1);		}			}}